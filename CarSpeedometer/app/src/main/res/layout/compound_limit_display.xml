<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/limit_speed_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="---"
        android:textSize="200sp"
        app:layout_constraintEnd_toStartOf="@+id/limit_speed_units"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/limit_speed_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:text="km/h"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/limit_speed_value"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/limit_signal_lost_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/limit_speed_units"
        app:layout_constraintEnd_toEndOf="@+id/limit_speed_units"
        app:layout_constraintStart_toStartOf="@+id/limit_speed_units"
        app:srcCompat="@drawable/ic_signal_lost" />

    <TextView
        android:id="@+id/limit_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120"
        android:textSize="56sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"  />

</android.support.constraint.ConstraintLayout>