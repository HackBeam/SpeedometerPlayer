<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.grego.SpeedometerPlayer.Compounds.Speedometer.SpeedometerDisplay
        android:id="@+id/cruise_speedometer_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cruise_desired_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120"
        android:textSize="56sp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"  />

    <ImageView
        android:id="@+id/cruise_below_background"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:alpha="0"
        app:layout_constraintEnd_toStartOf="@+id/cruise_desired_background"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cruise_below" />

    <ImageView
        android:id="@+id/cruise_desired_background"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cruise_good" />

    <ImageView
        android:id="@+id/cruise_above_background"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:alpha="0"
        app:layout_constraintStart_toEndOf="@+id/cruise_desired_background"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cruise_above" />

    <ImageView
        android:id="@+id/cruise_current_indicator"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="50dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/arrow_up_float" />
</android.support.constraint.ConstraintLayout>